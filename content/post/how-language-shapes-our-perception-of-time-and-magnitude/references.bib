	author = {Montero-Melis, Guillermo},
	month = mar,
	year = {2021},
	note = {Publisher: Frontiers},
	keywords = {motion events, Cross-linguistic, Entrenchment, entropy, event conceptualization, Speaker variability},
	file = {Full Text PDF:C\:\\Users\\pablob\\Zotero\\storage\\6YKRCHF9\\Montero-Melis - 2021 - Consistency in Motion Event Encoding Across Languages.pdf:application/pdf},
